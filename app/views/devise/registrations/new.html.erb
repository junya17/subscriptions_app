<h2>新規登録</h2>

<%= video_tag('/videos/subscript.mov',controls: true,:loop => true, class: 'embed-responsive embed-responsive-16by9 mb-3') %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "E-mail",class: "form-control"  %>
  </div>

  <div class="field form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上（必須）)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password",class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder: "password-2",class: "form-control"  %>
  </div>

  <div class="actions">
    <%= f.submit "登録" ,class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
