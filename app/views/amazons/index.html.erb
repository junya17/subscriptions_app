<p id="notice"><%= notice %></p>

<h1>Amazons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amazons.each do |amazon| %>
      <tr>
        <td><%= amazon.name %></td>
        <td><%= amazon.price %></td>
        <td><%= link_to 'Show', amazon %></td>
        <td><%= link_to 'Edit', edit_amazon_path(amazon) %></td>
        <td><%= link_to 'Destroy', amazon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Amazon', new_amazon_path %>
