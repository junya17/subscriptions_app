<p id="notice"><%= notice %></p>

<h1>Hulus</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hulus.each do |hulu| %>
      <tr>
        <td><%= hulu.name %></td>
        <td><%= hulu.price %></td>
        <td><%= link_to 'Show', hulu %></td>
        <td><%= link_to 'Edit', edit_hulu_path(hulu) %></td>
        <td><%= link_to 'Destroy', hulu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hulu', new_hulu_path %>
